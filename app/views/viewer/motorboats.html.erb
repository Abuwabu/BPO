<h2>Motorboats</h2>
<table>
	<tr>
		<th>Foto</th>
		<th><%= sortable "bmake", "Modelo" %></th>
		<th><%= sortable "year", "Año" %></th>
		<th><%= sortable "length", "Eslora (m)" %></th>
		<th><%= sortable "price", "Precio (&euro;)" %></th>
	</tr>
	
	<% @boats.each do |boat| %>
		<% if (boat.btype == "Motora" || boat.btype == "Lancha") && boat.for_sale == "Sí" %>
		<tr>
			<td>
				<div class="thumblink">
					<%= image_tag boat.photos[0].data.url(:thumb) %>
					<p><%= link_to "Mas Informaci&oacute;n", :controller => "viewer", :action => "single", :id => boat.id %></p>
				</div>
			</td>
			<td><%= boat.bmake %> <%= boat.model %></td>
			<td><%= boat.year %></td>
			<td><%= boat.length %></td>
			<% if boat.price.nil? || boat.price == 0 %>
				<td>¡A CONSULTAR!</td>
			<% else %>
				<td><%= number_to_currency(boat.price, :precision => 0, :unit => "&euro;") %></td>
			<% end %>
		</tr>
		<% end  %>	
	<% end %>
</table>