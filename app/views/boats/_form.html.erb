			<legend>Anotaciones</legend>
			<p>
				<%= f.label :sellers_price, "Due&ntilde;o Pide" %>
				<%= f.text_field :sellers_price %>
			</p>
			<p>
				<label>Buscando Otro Barco</label>
				<span class="radio">
					<%= f.label :looking, 'S&iacute;' %>
