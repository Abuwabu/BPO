			</p>
			<p>
				<%= f.label :for_sale, "En Venta?" %>
				<%= f.select :for_sale, Boat::FOR_SALE, :prompt => "Elegir" %>
			</p>
		</fieldset>
	</fieldset>
	
	<fieldset>
		<legend>Fotos</legend>
		<div id="photos">
		     <% if @boat.new_record? %>
		       <%= render :partial => 'photo', :locals => { :form => f, :photo => @boat.photos.build } %>
			<% else %>
					<% f.fields_for :photos do |p| %>

						<%= p.label :name %>
						<%= p.text_field :name %>
				    	<%= p.file_field :data %>
					<% end %>
		    <% end %>
		</div>
		<%= add_object_link("New Photo", f, @boat.photos.build, "photo", "#photos") %>
	</fieldset>
	
	<p><%= f.submit button_label %></p>
<% end %>