<table>
	<tr><th>Login</th><th>Email</th></tr>
	<% for user in @users %>
		<tr>
			<td><%=h user.login %></td>
			<td><%=h user.email %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><%= link_to 'Delete', user, :confirm => 'Seguro?!', :method => :delete %></td>
		</tr>
	<% end %>
</table>

